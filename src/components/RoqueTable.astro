---
//Get from local JSON
let roquetas = await fetch(
    "https://raw.githubusercontent.com/edugemen/Static-DB/main/Roquetas/db.json"
)
    .then((res) => res.json())
    .catch((err) => console.log(err));

const isVAM = (partido) => {
    return (
        partido.e1 === "Los Pinguinos de VAMagascar" ||
        partido.e2 === "Los Pinguinos de VAMagascar"
    );
};
---

<article class="w-full p-2 md:w-1/3 m-auto">
    {
        roquetas["AFADE M"].partidos.map((partido) => {
            return (
                <div
                    class="p-2 mb-2 rounded-md min-h-20 flex flex-col"
                    style={{
                        border: isVAM(partido) ? "4px solid #ff6666" : "none",
                        backgroundColor: isVAM(partido)
                            ? "#18B4AC"
                            : "var(--primary-color)",
                    }}
                >
                    <div class="h-full flex flex-row justify-between items-center flex-1">
                        <p class="flex-1 text-xl font-semibold">{partido.e1}</p>
                        <div class="flex flex-row flex-1 justify-center gap-2">
                            <p class="text-3xl font-semibold">
                                {partido.resultado[0]}
                            </p>
                            <p class="text-3xl font-semibold">-</p>
                            <p class="text-3xl font-semibold">
                                {partido.resultado[1]}
                            </p>
                        </div>
                        <p class="flex-1 text-xl font-semibold text-right">
                            {partido.e2}
                        </p>
                    </div>
                    <div class="flex flex-row justify-between mt-1">
                        <p>{partido.lugar}</p>
                        <p>{partido.fecha}</p>
                    </div>
                </div>
            );
        })
    }
</article>
