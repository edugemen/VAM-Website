        <li><a href="/clasification">Clasification</a></li>
        <li><a href="/lastgames">Last games</a></li>
        <li><a href="/about">About</a></li>
        <img class="sunmoon" src="/moon.png" alt="moon" />
    </ul>
</nav>

<style>
    nav {
        position: fixed;
        top: 0;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #0106137b;
        color: white;
        font-size: 20px;
        line-height: 1.6;
        font-weight: 500;
        padding: 1em;
    }

    ul {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        list-style: none;
        gap: 1em;
        margin: 0;
        padding: 0;
    }

    li {
        padding: 0.5em;
        border-radius: 0.5em;
        transition: background-color 0.3s ease;
    }

    li:hover {
        background-color: #23262d;
    }

    a {
        text-decoration: none;
        color: white;
    }

    .sunmoon {
        width: 30px;
        height: 30px;
        cursor: pointer;
    }
</style>

<script>
    const sunmoon: HTMLImageElement = document.querySelector(".sunmoon");

    sunmoon.addEventListener("click", () => {
        if (sunmoon.alt == "moon") {
            sunmoon.src = "/sun.png";
            sunmoon.alt = "sun";
            localStorage.setItem("theme", "light");
            document.documentElement.setAttribute("data-theme", "light");
        } else {
            sunmoon.src = "/moon.png";
            sunmoon.alt = "moon";
            localStorage.setItem("theme", "dark");
            document.documentElement.setAttribute("data-theme", "dark");
        }
    });

    //pre-check the dark-theme checkbox if dark-theme is set
    if (document.documentElement.getAttribute("data-theme") == "dark") {
        sunmoon.src = "/moon.png";
        sunmoon.alt = "moon";
    } else {
        sunmoon.src = "/sun.png";
        sunmoon.alt = "sun";
    }
</script>
