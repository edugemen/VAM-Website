---
let clasificacion = await (
    await fetch(
        "https://sportcapp.com:9006/open/api/clasificaciones/grupo/1644"
    )
).json();

let games = await (
    await fetch("https://sportcapp.com:9006/open/api/partidos/resultados/1644")
).json();

import PointShow from "./PointShow.astro";

let partidos = games.filter((game) => game.e1_id && game.e2_id);
---

<div class="clasi-container">
    {
        clasificacion.map((clasi) => {
            return (
                <div class="clasi-card">
                    <img
                        class="clasi-logo"
                        src={
                            "https://sportcapp.com:9006/" +
                            clasi.equipo_imagen.replace("_28x28", "")
                        }
                        alt={clasi.equipo_nombre + " logo"}
                    />
                    <div class="clasi-name">
                        <h2>{clasi.equipo_nombre}</h2>
                        <PointShow
                            team={clasi.equipo_id}
                            games={partidos.filter(
                                (game) =>
                                    game.e1_id == clasi.equipo_id ||
                                    game.e2_id == clasi.equipo_id
                            )}
                        />
                    </div>
                    <div class="clasi-points">
                        <div class="clasi-box">
                            <p class="leyenda">Puntaci√≥n</p>
                            <p class="puntos">{clasi.puntos}</p>
                        </div>
                        <div class="separator" />
                        <div class="clasi-box ">
                            <p class="leyenda">Average</p>
                            <p class="puntos">{clasi.avgGeneral}</p>
                        </div>
                    </div>
                </div>
            );
        })
    }
</div>

<style>
    .clasi-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 5px;
    }
    .clasi-card {
        background-color: var(--primary-color);
        color: black;
        height: 100px;
        width: 100%;
        border-radius: 10px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: start;
        gap: 10px;
    }
    .clasi-logo {
        height: 75px;
        margin-left: 10px;
        aspect-ratio: 1;
        border-radius: 15px;
        object-fit: contain;
    }
    .clasi-name {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1;
        align-items: start;
        height: calc(100% - 20px);
        padding: 10px 0;

        h2 {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
        }
    }
    .clasi-points {
        display: flex;
        flex-direction: column;
        height: 100%;
        min-height: inherit;
        width: 100px;
        border-left: 2px solid black;

        .separator {
            width: 100%;
            height: 2px;
            background-color: black;
        }
    }

    .clasi-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: end;
        flex: 1;
        padding: 0 5px;

        p {
            margin: 0;
            font-weight: bold;
            color: var(--font-color);
        }
    }

    .leyenda {
        font-size: 12px;
    }

    .puntos {
        font-size: 20px;
    }
</style>
