---
import Layout from "../layouts/Layout.astro";
import InstagramFeed from "../components/InstagramFeed";
import NavBar from "../components/Navbar";
import Marcador from "../components/Marcador";
import Footer from "../components/Footer.astro";
import Volleyball from "../components/Volleyball.astro";
import LandingLogo from "../components/LandingLogo.astro";
import Logo from "../components/icons/Logo.astro";
---

<Layout title="VAM">
    <NavBar client:load />
    <section id="portada">
        <!-- <img id="logo-vam" src="/logo.webp" alt="logo vam" /> -->
        <Logo size={300} color="var(--logo-color)" />
        <!-- <Volleyball /> -->
        <!-- <LandingLogo /> -->
    </section>
    <main class="page-container">
        <section id="stream-container">
            <div class="stream-title">
                <h2>Resultado del partido en directo</h2>
                <Marcador client:load />
            </div>
            <iframe
                id="stream-iframe"
                src="https://player.twitch.tv/?channel=vamcerrodelviento&parent=www.vamcv.es"
                allowfullscreen="true"
                height="378"
                width="620"></iframe>
        </section>
    </main>
    <section class="ig-container">
        <InstagramFeed client:load />
    </section>
    <section class="footer">
        <Footer />
    </section>
</Layout>

<style>
    .page-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 80%;
        margin: auto;
    }

    #portada {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        background:
            var(--bg-img) no-repeat center center,
            var(--bg-color);
        background-size: cover;
        box-shadow: inset 0px -100px 40px -40px var(--bg-color);
        z-index: -1;
    }

    #logo-vam {
        max-width: 300px;
    }

    #stream-container {
        width: 100%;
        height: 500px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .stream-title {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-width: 300px;
        margin: 0 auto;
        margin-bottom: 40px;
    }

    iframe {
        border: 0;
        border-radius: 10px;
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
        margin: auto;
    }
</style>
